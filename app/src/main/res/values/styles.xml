<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="subtitle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">#212121</item>
    </style>
    <style name="subheading">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#727272</item>
    </style>
    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">42dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#03A9F4</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="divider">
        <item name="android:background">#b6b6b6</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <style name="proteinsubheading">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#727272</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="image">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:layout_marginTop">72dp</item>
    <item name="android:adjustViewBounds">true</item>
    </style>
</resources>

